server:
  http:
    addr: 0.0.0.0:8001
    timeout: 1s
data:
  database:
    driver: postgres
    source: postgres://user:password@localhost:5432/domain_radar?sslmode=disable
auth:
  jwt_key: "your-secret-key-change-me"
radar:
  llm:
    base_url: "https://api.your-llm-provider.com/v1"
    api_key: "your-api-key"
    model: "gpt-4"
  search:
    provider: "tavily"
    tavily:
      api_key: "your-tavily-api-key"
    searxng:
      base_url: "http://localhost:8080"
      timeout: 10
  user_persona: "your persona"
  domains:
    - "domain1"
    - "domain2"
  log:
    level: "info"
    file: "output/app.log"
  concurrency:
    qps: 10
    rpm: 100
  db:
    host: "localhost"
    port: 5432
    user: "user"
    password: "password"
    name: "domain_radar"
